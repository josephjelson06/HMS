# Database
POSTGRES_DB=hms
POSTGRES_USER=hms
POSTGRES_PASSWORD=devpassword
DATABASE_URL=postgresql+asyncpg://hms:devpassword@db:5432/hms

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@local.dev
PGADMIN_DEFAULT_PASSWORD=admin

# Backend
APP_NAME=HMS
ENVIRONMENT=development
